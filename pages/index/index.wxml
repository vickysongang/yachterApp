<!--index.wxml-->
<import src="../../templates/template.wxml"/>
<scroll-view class="container" scroll-y>
  <view class="buttonGroup">
     <button>班级</button>
     <button>学院</button>
  </view>
  <block wx:for="{{notices}}" wx:for-item="item" wx:key="id">
    <template is="noticeItem" data="{{...item}}"/>
  </block>
  <view class='publish-button-view'>
    <image src='../../image/green_tri.png' class='publish-button-image'
    bindtap='bindPublishNotice'
    ></image>
  </view>
</scroll-view>
