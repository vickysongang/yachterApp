.main-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  background: white;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.randCode-left-view {
  display: flex;
  width: 300rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-left: 40rpx;
}

.randCode-right-view {
  display: flex;
  width: 300rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-right: 12rpx;
}

.randCode-button {
  background: white;
  height: 96rpx;
  width: 268rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.randCode-label {
  font-size: 28rpx;
}

.comfirm-button-view {
  margin: 58rpx 134rpx 0 134rpx;
}

.comfirm-button {
  background: #169afa;
}

.comfirm-button-hover {
  background: #169aaa;
}

.comfirm-button-label {
  font-size: 32rpx;
  color: #fff;
}

.tip-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tip-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #000;
}

.randcode-input {
  color: #000;
  font-size: 50rpx;
}

.class_drawer_content {
  height: 260px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.classes_view {
  width: 80%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: 10%;
}

.class_cell {
  border: 1px solid #000;
  width: 100rpx;
  height: 50rpx;
  margin: 20rpx 15rpx;
  border-radius: 30rpx;
  text-align: center;
}

.selected_class_cell {
  border: 1px solid #f02800;
  width: 100rpx;
  height: 50rpx;
  background: #f02800;
  margin: 20rpx 15rpx;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
}

.class_cell_1 {
  border: 1px solid #000;
  width: 132rpx;
  height: 50rpx;
  margin: 20rpx 15rpx;
  border-radius: 30rpx;
  text-align: center;
}

.selected_class_cell_1 {
  border: 1px solid #f02800;
  width: 132rpx;
  height: 50rpx;
  background: #f02800;
  margin: 20rpx 15rpx;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
}

.class_btn_cancel_image {
  position: fixed;
  top: 85%;
  left: 50%;
  margin-left: -43rpx;
  width: 86rpx;
  height: 86rpx;
  background: #919191;
  border-radius: 50%;
  z-index: 1000;
}