<import src="../../templates/template.wxml"/>
<view class="main-container">
  <picker bindchange="bindPickSchool" value="{{schoolIndex}}" range="{{schools}}">
  <template is="fieldCell" data="{{label:'大学', value:schools[schoolIndex]}}" />
  </picker>
  <view class='divider-line'></view>
  <picker bindchange="bindPickCollege" value="{{collegeIndex}}" range="{{colleges}}">
  <template is="fieldCell" data="{{label:'学院', value:colleges[collegeIndex]}}" />
  </picker>
  <view class='divider-line'></view>
  <picker bindchange="bindPickSchool" value="{{schoolIndex}}" range="{{schools}}">
   <template is="fieldCell" data="{{label:'专业', value:schools[schoolIndex]}}" />
  </picker>
  <view class='divider-line'></view>
  <picker bindchange="bindPickGrade" value="{{gradeIndex}}" range="{{grades}}">
   <template is="fieldCell" data="{{label:'年级', value:grades[gradeIndex]}}" />
  </picker>
  <view class='divider-line'></view>
  <picker bindchange="bindPickProvince" value="{{provinceIndex}}" range="{{provinces}}">
  <template is="fieldCell" data="{{label:'省份', value:provinces[provinceIndex]}}" />
  </picker>
  <view class='divider-section'></view>
  <template is="fieldCell" data="{{label:'手机号', value:'18600397392'}}" />
    <view class='divider-line'></view>
   <view class='cell-section' style='margin-bottom:10rpx;'>
      <view class='randCode-left-view'>
        <input class="weui-input" 
        maxlength="6"
        type="number" placeholder="输入六位验证码" /> 
      </view>
      <view class='randCode-right-view'>
        <button class='randCode-button' bindtap='bindGetRandCode'>
          <text class='randCode-label'>{{randCodeButtonText}}</text>
        </button>
      </view>
   </view> 
    <view class='divider-line'></view>
    <view class='comfirm-button-view'>
      <button 
        bindtap='bindComfirm'
        class='comfirm-button' 
        hover-class='comfirm-button-hover'>
        <text class='comfirm-button-label'>确定</text>
      </button>
    </view>
     <view class='tip-view'>
        <text class='tip-text'>请慎重填写，不能修改哦</text>
     </view>
</view>