/**app.wxss**/
@import "./templates/template.wxss";
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

checkbox, radio{
  margin-right: 10rpx;
}

button{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

form{
  width: 100%;
}

/* lib */
.strong{
  font-weight: bold;
}
.tc{
  text-align: center;
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
} 

.divider-line {
  border: 1px solid #F7F7F7;
  margin:0 38rpx;
}

.divider-section {
  height: 32rpx;
  background: #F7F7F7;
}

.ad_popError { 
  background: #de352d; 
  color: #fff; 
  height: 58rpx; 
  line-height: 58rpx; 
  font-size: 24rpx; 
  text-align: center;  
  position: fixed; 
  left: 0; 
  top: 0;
  width: 100%;
  z-index:3;
}

.swiper-class {
  height: 210rpx;
  width: 100%;
}

.slide-image {
  height: 210rpx;
  width: 100%;
}